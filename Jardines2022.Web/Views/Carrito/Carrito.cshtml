@model IEnumerable<Jardines2022.Web.Models.Carrito.CarritoListVm>
@{ ViewBag.Title = "Carrito";}

<section class="main"id="main">
    <div class="card">
        <div class="mt-3 mb-3 m-3 mx-3">
            <table class="table table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Producto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th></th>
                </tr>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Producto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                            <td>@Html.DisplayFor(modelItem => item.Total)</td>
                            <td>
                                @Html.ActionLink("Quitar", "QuitarDelCarrito", new { productoId = item.ProductoId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                    <tr>
                        <td><strong>Total:</strong></td>
                        <td>@Model.Sum(c => c.Cantidad)</td>
                        <td>@Model.Sum(c => c.Precio * c.Cantidad).ToString("N")</td>
                        <td></td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td><strong>Sin productos</strong></td>
                    </tr>
                }
            </table>
            @if (Model.Any())
            {
                <div>
                    @Html.ActionLink("Comprar", "CompletarCompra", null, new { @class = "btn btn-success" })
                    @Html.ActionLink("Cancelar", "CancelarCompra", null, new { @class = "btn btn-warning" })
                    <a class="btn btn-primary" href="@Url.Action("Tienda","Tienda")"><span>Seguir Comprando</span></a>
                </div>
            }
        </div>
    </div>
</section>





