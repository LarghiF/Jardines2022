@model IEnumerable<Jardines2022.Entidades.Entidades.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="card">
        <div class="card-body">
            <a href="@Url.Action("Create","Categorias")" class="bi-plus-lg btn btn-primary btn-lgs mt-3"> Nueva Categoría</a>
        </div>
    </div>
    <div class="pagetitle">
        <h1>Lista de categorías</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                <li class="breadcrumb-item">Productos</li>
                <li class="breadcrumb-item active">Categorías</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <div class="card">
        <div class="card-body">
            <!-- Table with hoverable rows -->
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Categoría</th>
                        <th scope="col">Descripción</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreCategoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.CategoriaId }, new { @class = "btn btn-warning" })
                            </td>
                            <td>
                                @Html.ActionLink("Borrar","Borrar", new { id = item.CategoriaId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Table with hoverable rows -->

        </div>
    </div>
</main>