@model Jardines2022.Web.Models.Ciudad.CiudadListVm
@{ 
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main"class="main">
    <h3>Estas seguro de eliminar este registro?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NombreCiudad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreCiudad)
            </dd>

            <dt>
                @Html.LabelFor(model => model.Pais, htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Pais, new { htmlAttributes = new { @class = "form-control" } })
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-primary" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-success" })
            </div>
        }
    </div>
</main>
